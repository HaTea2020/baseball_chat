<h2 class="title">ユーザー編集ページ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class='field-box'>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password ,"変更したいパスワードに入力(変更なければ空白)"%><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation ,"上記のパスワード確認"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password ,"現在使っているパスワードを入力"%> <span class="indispensable">必須</span><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  
  <div class='field'>
    <div class='field-label'>
      <%= f.label :team_id, "好きな球団"%>
    </div>
    <div class='field-input'>
      <%= f.collection_select(:team_id, Team.all, :id, :name, {}, {class:"select-box", id:"team"}) %>
    </div>
  </div>

  <div class='field'>
    <div class='field-label'>
      <%= f.label :favorite_player, "今推している選手"%>
    </div>
    <div class='field-input'>
      <%= f.text_field :favorite_player%>
    </div>
  </div>

  <div class='field'>
    <div class='field-label'>
      <%= f.label :introduction, "自己紹介文"%>
    </div>
    <div class='field-input'>
      <%= f.text_area :introduction, size: "35x10"%>
    </div>
  </div>
</div>

  <div class="actions">
    <%= f.submit "更新" ,class: "btn"%>
  </div>
<% end %>

<%# <h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

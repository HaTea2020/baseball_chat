<%= render "shared/header"%>
<div class='top-header'>
  <div class='title-set'>
  <%= image_tag "title_icon.png", class:"title-icon"%>
  <h1 class='top-title'>プロ野球コミュニティーチャットサイト</h1>
  </div>
   <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-option" %></li>
        <li><%= link_to 'ログアウト',destroy_user_session_path, method: :delete, class: "user-option" %></li> 
      <% else %>
        <li><%= link_to 'ログイン',new_user_session_path, class: "user-option" %></li>
        <li><%= link_to '新規登録',new_user_registration_path, class: "user-option" %></li>
      <% end %>
    </ul>
  </div>
</div>
  
 <div class='title-contents'>
